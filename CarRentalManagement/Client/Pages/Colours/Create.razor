@page "/colours/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New Colours</h3>
<hr />
<br />

<FormComponent ButtonText="Create Colour" colour="colour" OnValidSubmit="@CreateColour" />

