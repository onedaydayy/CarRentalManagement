@page "/models/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New Models</h3>
<hr />
<br />

<FormComponent ButtonText="Create Model" model="model" OnValidSubmit="@CreateModel" />

@*
